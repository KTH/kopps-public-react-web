{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "allowJs": true,
    "checkJs": false,
    "module": "es6",
    "target": "ES2020",
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "domain/*": ["../domain/*"]
    }
  },
  "include": ["./**/*.ts", "./**/*.tsx"]
}
