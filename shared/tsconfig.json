{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "outDir": "dist",
    "rootDir": ".",
    "composite": true,
    "types": ["jest", "jest-extended"]
  },
  "include": ["**/*.js", "**/*.ts"],
  "exclude": ["dist", "node_modules", "**/*.test.ts", "**/*.spec.ts", "**/*.test.tsx"]
}
