{
  "name": "kopps-public-react-web",
  "version": "0.1.0",
  "description": "Migration from Kopps in Play Framework 2.X to Express and React.",
  "main": "app.js",
  "private": true,
  "license": "MIT",
  "author": "KTH",
  "repository": {
    "type": "git",
    "uri": "https://github.com/KTH/node-web"
  },
  "engines": {
    "node": "12"
  },
  "scripts": {
    "prettier:all": "prettier --write \"**/*.js\" \"**/*.jsx\" \"**/*.scss\"",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:notify": "NODE_ENV=test jest --watch --notify",
    "test:pages": "NODE_ENV=test jest ./public/js/app/pages/CourseSearchLayout.test.js --watch --notify",
    "test:components": "NODE_ENV=test jest ./public/js/app/components/SearchResultDisplay.test.js --watch --notify",
    "build": "bash ./build.sh prod",
    "build-dev": "bash ./build.sh dev",
    "lint": "eslint \"public/**/*.{js,jsx}\" --quiet",
    "prepare": "husky install",
    "start": "bash -c 'NODE_ENV=production node app.js'",
    "start-dev": "bash -c 'NODE_ENV=development concurrently --kill-others -n build,app \"npm run build-dev\" \"nodemon app.js\"'"
  },
  "dependencies": {
    "@babel/runtime": "^7.15.4",
    "@kth/kth-reactstrap": "^0.4.42",
    "applicationinsights": "^2.1.8",
    "axios": "^0.24.0",
    "body-parser": "^1.19.0",
    "chalk": "^4.1.2",
    "component-registry": "^2.0.0",
    "cookie-parser": "^1.4.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-handlebars": "^5.3.4",
    "kth": "^1.0.0",
    "kth-node-access-log": "^0.2.6",
    "kth-node-api-call": "^3.0.18",
    "kth-node-configuration": "^2.0.7",
    "kth-node-express-routing": "^2.0.11",
    "kth-node-i18n": "^1.0.12",
    "kth-node-log": "^3.1.10",
    "kth-node-monitor": "^1.1.14",
    "kth-node-redis": "^3.1.35",
    "kth-node-server": "^3.1.7",
    "kth-node-session": "^2.0.4",
    "kth-node-web-common": "^6.0.7",
    "kth-style": "^7.0.2",
    "local-cors-proxy": "^1.1.0",
    "mobx": "^6.3.5",
    "mobx-react": "^7.2.1",
    "moment": "^2.29.1",
    "moment-timezone": "^0.5.33",
    "prop-types": "^15.7.2",
    "querystring": "^0.2.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router": "^5.2.1",
    "react-router-dom": "^5.3.0",
    "reactstrap": "^8.10.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.3",
    "@babel/core": "^7.14.3",
    "@babel/plugin-transform-runtime": "^7.14.3",
    "@babel/preset-env": "7.14.4",
    "@babel/preset-react": "^7.13.13",
    "@kth/eslint-config-kth": "^2.0.2",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.2",
    "@types/jest": "^27.0.2",
    "babel-eslint": "^10.1.0",
    "concurrently": "^6.3.0",
    "eslint": "^8.1.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "jest-axe": "^5.0.1",
    "jest-extended": "^1.1.0",
    "nodemon": "^2.0.14",
    "parcel-bundler": "^1.12.5",
    "prettier": "^2.4.1",
    "pretty-quick": "^3.1.1",
    "sass": "^1.43.4"
  },
  "// (prettier)": "configuration version 2020-06-15 - might also reside in .prettierrc.json",
  "prettier": {
    "arrowParens": "avoid",
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "// (babel)": "configuration version 2020-10-21 (WEB) - might also reside in .babelrc.json",
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-transform-runtime"
    ]
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run test",
      "pre-commit": "pretty-quick --staged"
    }
  }
}
